<%- include("partials/header.ejs") %>
    

<div class="container col-xxl-8 px-4 py-5 main">
    <div class="row flex-lg-row-reverse align-items-center g-5 py-5 content" style="margin-top: 3rem;">
        <div class="col-10 col-sm-8 col-lg-6 input-block">
            <div class="response-area d-block mx-lg-auto"
             <h1> 
                <%if (locals.content) { %>

                <h1>
                    <%= content %>
                </h1>
                <% if (locals.punchline) { %>
                    <h1>
                        <%= punchline %>
                    </h1>
                <% } %>
                <% } else { %>
                 <img src="https://i.imgflip.com/7fz8b3.jpg" class="d-block mx-lg-auto img-fluid" alt="" loading="lazy">
                <% } %>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="lc-block mb-3">
                <div editable="rich">
                    <h2 class="fw-bold display-5">Advice or Joke?</h2>
                </div>
            </div>

            <div class="lc-block mb-3">
                <div editable="rich">
                    <p class="lead"> Do you want a piece of advice or joke? Click on the desired button and generate it.
                    </p>
                </div>
            </div>

            <div class="lc-block d-grid gap-2 d-md-flex justify-content-md-start">
                <!-- <a class="btn btn-primary px-4 me-md-2" href="#" role="button">Click me, I'm a button</a>
                <a class="btn btn-outline-secondary px-4" href="#" role="button">Click me, I'm a button</a> -->
            <form id="myForm" method="post">
                <input id="advice" type="submit" class="btn btn-primary px-4 me-md-2 advice-btn" value="Advice" formaction="/get-advice">
                <input id="joke" type="submit" class="btn btn-outline-secondary px-4 joke-btn" value="Joke" formaction="/get-joke">
            </form>
        </div>
            
        </div>
    </div>
</div>


